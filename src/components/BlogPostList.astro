---
import type { CollectionEntry } from "astro:content";
import BlogPostPreview from "./BlogPostPreview.astro";

export interface Props {
	posts: CollectionEntry<"blog">[];
}

const { posts } = Astro.props;
---

<ul>
	{
		posts.map((post) => (
			<li>
				<BlogPostPreview post={post} />
			</li>
		))
	}
</ul>
<style>
	ul {
		list-style: none;
		padding: 0;
	}
	li {
		padding: 0.5rem 0;
	}
</style>
