---
import Nav from "./Nav.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;

const titleActivePageMap: Record<string, string | undefined> = {
	"Isaiah Althouse": "About",
	Blog: "Blog",
};

const active = titleActivePageMap[title] ?? title;
---

<header>
	<div class="container">
		<div class="left logo">
			<a href="/">
				<span class="text-gradient text-large">Isaiah</span>
				<span class="text-small">.fyi</span>
			</a>
		</div>
		<div class="right">
			<Nav active={active} />
		</div>
	</div>
</header>

<style>
	header {
		position: sticky;
		position: -webkit-sticky;
		top: 0;
		background-color: rgb(var(--bg));
		padding: 0 0.5rem;
		z-index: 100;
	}

	header a {
		text-decoration: none;
	}

	.container {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	.logo {
		font-weight: bold;
	}

	.text-large {
		font-size: 2rem;
	}
</style>
